.tabs {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    background: grey;
    width: 100%;
    height: 100rpx;
    
}

.detail-view {
    margin-top: 20rpx;
    display: flex;
    flex-flow: column wrap;
    align-items: flex-start;
}

.works-container {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.works-container view {
    height: 100%;
    margin-left: 20rpx;
    border-radius: 10px;
    display: flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: center;
    text-align: center;
}

.works-container text {
    width: 128px;
}

.works-image {
    width: 128px;
    height: 180px;
}

