<loading hidden="{{isLoading}}">loading.....</loading>

<scroll-view scroll-y="true" style="width:100%; height:{{screenHeight}}px">
    <view class="container">
        <image style="width: 100%; height: 750rpx;" src="{{img}}"/>
        <view class="tabs">
            <view catchtap="onClickSummary">
                <text style="color: {{isSelectedSummary ? tabSelectedColor : tabNormalColor}};">简介</text>
            </view>
            <view catchtap="onClickPhotos">
                <text style="color: {{isSelectedPhotos ? tabSelectedColor : tabNormalColor}};">剧照</text>
            </view>
            <view bindtap="onClickRelated">
                <text style="color: {{isSelectedRelated ? tabSelectedColor : tabNormalColor}};">相关</text>
            </view>
        </view>
        <view class="detail-view">
            <view hidden="{{!isSelectedSummary}}">
                <text>{{summary}}</text>
            </view>
            <view hidden="{{!isSelectedPhotos}}">

            </view>
            <view hidden="{{!isSelectedRelated}}">
                <view style="display: inline-block">主角<text style="color:red;">{{cast}}</text>的相关作品:</view>
                <scroll-view scroll-x="true" style="width: 100%; height: 300rpx; margin-top: 20rpx;">
                    <view style="display: flex; flex-flow: row wrap;">
                    <block wx:for="{{works}}">
                        <image style="width: 240rpx; height: 260rpx; margin-left: 20rpx;" src="{{item}}"/>
                    </block>
                    </view>
                </scroll-view>
            </view>
        </view>
    </view>
</scroll-view>

<toast hidden="{{toastHidden}}" bindchange="toastChange" duration="1000">This is Toast</toast>

